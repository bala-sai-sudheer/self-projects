<header>
    <div class="header-container">
        <div class="logo">
            <i class="fas fa-utensils"></i>
            <span>Foodie Hyderabad</span>
        </div>

        <div class="location">
            <i class="fas fa-map-marker-alt"></i>
            <span><%= location %></span>
            <i class="fas fa-chevron-down"></i>
        </div>

        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Search for restaurants or cuisines in Hyderabad...">
        </div>

        <div class="user-actions">
            <a href="#"><i class="fas fa-user"></i> <span>Log in</span></a>
            <a href="#"><i class="fas fa-shopping-cart"></i> <span>Cart</span></a>
        </div>
    </div>
</header>
